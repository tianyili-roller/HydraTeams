{
  "name": "hydra-proxy",
  "version": "0.1.0",
  "description": "Translation proxy that makes Claude Code Agent Teams model-agnostic",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hydra-proxy": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "specs:download": "bash scripts/download-specs.sh",
    "schemas:generate": "openapi-ts && node -e \"const f='src/schemas/generated/openai/zod.gen.ts',fs=require('fs'),c=fs.readFileSync(f,'utf8'); if(!c.startsWith('// @ts-nocheck')) fs.writeFileSync(f,'// @ts-nocheck\\n'+c)\"",
    "schemas:update": "npm run specs:download && npm run schemas:generate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "claude-code",
    "agent-teams",
    "multi-model",
    "proxy",
    "openai",
    "anthropic",
    "translation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "0.92.4",
    "@types/node": "^25.2.2",
    "dotenv": "^17.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.18",
    "zod": "4.3.6"
  }
}
